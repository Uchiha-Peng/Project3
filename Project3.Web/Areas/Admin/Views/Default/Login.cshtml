@model Project3.Data.Models.Users;
@{
    Layout = "_BasicLayout";
    ViewData["Title"] = "Login";
}
<style>
    html,
    body {
        height: 100%;
    }

    body {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
    }

        .form-signin .checkbox {
            font-weight: 400;
        }

        .form-signin .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }

            .form-signin .form-control:focus {
                z-index: 2;
            }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
    .alert {
        position:absolute;
        top:0;
        width:100%;
        text-align:center;

    }
</style>
<form class="form-signin text-center" asp-action="LoginPost" method="post">
    <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Project3</h1>
    <label for="inputEmail" class="sr-only">登录名</label>
    <input type="text" class="form-control" placeholder="登录名" required autofocus asp-for="username">
    <label for="inputPassword" class="sr-only">密码</label>
    <input type="password" class="form-control" placeholder="密码" required asp-for="password" >
    <div class="checkbox mb-3 text-left">
        <label>
            <input type="checkbox" name="remeber"> 7天内自动登录
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">登 录</button>
    <p class="mt-5 mb-3 text-muted" style="margin-top:15px;">&copy; 2018 - Project3</p>
</form>