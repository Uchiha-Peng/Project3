@model OptionsIndexViewModel;
@{
    ViewData["Title"] = "站点设置";
}
<form asp-action="EditPost" method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="name">主题</label>
                <input type="text" class="form-control" placeholder="" value="@Model.options.theme" name="theme">
                <p class="help-block">填写主题文件夹名称：在/Views/Shared/主题文件夹名称</p>
            </div>
            <div class="form-group">
                <label for="name">站点标题</label>
                <input type="text" class="form-control" placeholder="" value="@Model.options.title" name="title">
            </div>
            <div class="form-group">
                <label for="name">副标题</label>
                <input type="text" class="form-control" placeholder="" value="@Model.options.subtitle" name="subtitle">
            </div>
            <div class="form-group">
                <label for="name">LOGO链接</label>
                <input type="text" class="form-control" placeholder="" value="@Model.options.logo" name="logo">

            </div>
            <div class="form-group">
                <label for="name">站点地址</label>
                <input type="text" class="form-control" placeholder="" value="@Model.options.siteurl" name="siteurl">
            </div>
            <div class="form-group">
                <label for="name">站点描述</label>
                <textarea rows="3" class="form-control" name="description">@Model.options.description</textarea>
            </div>
            <div class="form-group">
                <label for="name">站点关键词</label>
                <textarea rows="3" class="form-control" name="keywords">@Model.options.keywords</textarea>
            </div>
            <div class="form-group">
                <label for="name">文章列表显示条数</label>
                <input type="number" class="form-control" placeholder="" value="@Model.options.postslistsize" name="postslistsize">
            </div>
            <div class="form-group">
                <label for="name">评论列表显示条数</label>
                <input type="number" class="form-control" placeholder="" value="@Model.options.commentslistsize" name="commentslistsize">
            </div>
            <div class="form-group">
                <label for="name">评论提交冷却时间（单位秒）</label>
                <input type="number" class="form-control" placeholder="" value="@Model.options.postcommentscd" name="postcommentscd">
            </div>
            <div class="checkbox">
                <label>
                    <input type="hidden" name="allowcomments" id="allowcomments" value="@Model.options.allowcomments" />
                    <input type="checkbox" id="allowcomments_checkbox" @(Model.options.allowcomments == "0" ? "checked=\"checked\"" : "")>允许评论
                </label>
                <p class="help-block">影响整站</p>
            </div>
            <div class="form-group">

                <button type="submit" class="btn btn-primary">更新设置</button>

            </div>
        </div>
    </div>
</form>
@section scripts{
    <script>
        $("#allowcomments_checkbox").on("click", function () {

            $("#allowcomments").val($("#allowcomments_checkbox").is(':checked') ? "0" : "1");
        });
    </script>
}