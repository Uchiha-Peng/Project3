@model Project3.Web.Models.ContentVM.ArticleViewModel;
@{
    var options = ViewData["options"] as Project3.Data.Models.OptionsModel;
}
@{
    if (options.allowcomments == "0" && Model.content.allowcomment == 0)
    {
        <div class="comment">
            <h3>所有评论</h3>


            @*@await Component.InvokeAsync("CommentsItem", new { cid = Model.content.cid })*@




            <!--评论列表-->

            <ul class="commentitems" id="comments"></ul>

            <div class="paginator hidden" id="loadmore">

                <a class="next" href="javascript:void;">加载更多</a>
            </div>
            <form asp-controller="content" asp-action="Comment_Post" method="post" id="form">
                <input type="hidden" name="cid" value="@Model.content.cid" />
                <input type="hidden" name="type" value="@Model.content.type" />
                <input type="hidden" name="parentcoid" id="parentcoid" value="0" />

                <div class="form-group" id="form">
                    <label>昵称*</label>
                    <input type="text" class="form-control" name="nickname" />
                </div>
                <div class="form-group">
                    <label>邮箱*</label>
                    <input type="email" class="form-control" name="email" />
                </div>
                <div class="form-group">
                    <label id="toreply">评论*</label>
                    <textarea rows="3" class="form-control" name="content"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">提交评论</button>
                </div>
            </form>
        </div>



    }
}
